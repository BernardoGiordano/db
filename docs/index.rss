---
layout: compress
---

<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/">
	<channel>
		<title>{{ site.title }}</title>
		<link>{{ site.url }}</link>
		<atom:link href="{{ site.url | append: page.url }}" rel="self" type="application/rss+xml" />
		<description>{{ site.description }}</description>
		<lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
		{% assign apps = site["3ds"] | concat: site.ds | uniq | sort: "updated" | reverse %}
		{% for app in apps limit: 5 %}
			<item>
				<title>{{ app.title }}</title>
				<link>
					{{ app.url | prepend: site.url }}
				</link>
				<description>
					{{ app.version }}
					{% if app.update_notes %}
						&lt;hr /&gt;
						{{ app.update_notes | escape | truncate: '2000' }}
					{% endif %}
				</description>
				<pubDate>{{ app.date | date_to_rfc822 }}</pubDate>
				<guid>
					{{ app.url | prepend: site.url }}
				</guid>
				{% if app.image %}
					<enclosure url="{{ app.image }}" length="{{ app.image_length }}" type="image/png"></enclosure>
				{% endif %}
			</item>
		{% endfor %}
	</channel>
</rss>
